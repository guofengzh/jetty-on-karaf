<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<features xmlns="http://karaf.apache.org/xmlns/features/v1.2.0" name="jetty-on-karaf">

    <feature description="jetty-bundles" name="jetty-bundles" version="${jetty.version}">
